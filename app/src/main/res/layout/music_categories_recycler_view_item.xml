<layout xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.demo.muebert.modal.CategoriesItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCategory"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="17dp"
            android:src="@{data.icon}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            fontAccordingToLanguage="@{@string/key_bold_font}"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:lines="1"
            android:paddingBottom="6dp"
            android:singleLine="true"
            android:textColor="@color/black_shadow"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/ivCategory"
            app:layout_constraintStart_toStartOf="@+id/ivCategory"
            app:layout_constraintTop_toBottomOf="@+id/ivCategory"
            bind:currentLanguageMuebertCategory="@{data.name}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
