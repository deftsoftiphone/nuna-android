<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/white_round" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="fitXY"
                android:src="@drawable/pink" />

            <ImageView
                android:id="@+id/imv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_90sdp"
                tools:src="@drawable/tutorial_two" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/lin_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/imageview"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:elegantTextHeight="true"
                android:id="@+id/upr_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/gothampro_medium"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:textColor="#222222"
                android:textSize="22sp"
                tools:text="Upper text" />

            <TextView
                android:elegantTextHeight="true"
                android:id="@+id/below_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:textColor="@color/brown_grey"
                android:textSize="13sp"
                android:theme="@style/pro"
                tools:text="Lower text" />

        </LinearLayout>


    </LinearLayout>

</layout>