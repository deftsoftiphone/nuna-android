<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="data"
            type="com.demo.model.response.baseResponse.Comment" />

        <variable
            name="clickHandler"
            type="com.demo.viewPost.home.viewModal.ViewPostViewModal.ClickHandler" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/like_btn_layout"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:onClick="@{() -> clickHandler.onUserClick(data.commentedBy.id)}"
                app:civ_border_color="@color/status_bar_color"
                app:civ_circle_background_color="@color/status_bar_color"
                bind:loadUserImage="@{data.commentedBy.profilePicture.mediaurl}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/usernane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_pro_medium"
                    android:onClick="@{() -> clickHandler.onUserClick(data.commentedBy.id)}"
                    android:text="@{`@`+ data.commentedBy.userName}"
                    android:textColor="@color/black_shadow"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comments_description"
                    fontAccordingToLanguage="@{@string/key_normal_font}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@{data.description}"
                    android:textColor="@color/black_shadow"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/like_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.like.LikeButton
                android:id="@+id/likebtncomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:anim_scale_factor="2"
                app:circle_end_color="@color/heart"
                app:circle_start_color="@color/india_red"
                app:dots_primary_color="@color/india_red"
                app:dots_secondary_color="@color/heart"
                app:icon_height="24dp"
                app:icon_size="24dp"
                app:icon_type="heart"
                app:like_drawable="@drawable/ic_comments_selected"
                app:unlike_drawable="@drawable/ic_comments_unselected" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:gravity="center"
                android:text="@{data.noOfLikes}"
                android:textColor="#848484"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>
</layout>